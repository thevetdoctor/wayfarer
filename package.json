{
  "name": "wayfarer",
  "version": "1.0.0",
  "description": "a public bus transportation API",
"engines" : {
  "node": "11.11.0"
},
  "main": "index.js",
  "scripts": {
    "test": "mocha --timeout 30000 --exit --require @babel/register ./src/test",
    "pretest": "npm run migrate",
    "start": "node ./dist/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "devt": "npm run build && node dist/index.js",
    "removedist": "rm -rf ./dist",
    "build": "npm run removedist && babel src --out-dir dist",
    "serve": "node dist/index.js",
    "migrate": "set NODE_ENV=test && node ./src/db/migrations/index.js && exit 0",
    "cover": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thevetdoctor/wayfarer.git"
  },
  "keywords": [
    "transportation",
    "public",
    "bus"
  ],
  "author": "Obafemi Oderanti <thevetdoctor@gmail.com> (www.animalworld.com.ng)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thevetdoctor/wayfarer/issues"
  },
  "homepage": "https://github.com/thevetdoctor/wayfarer#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.11.0",
    "regenerator-runtime": "^0.13.2",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  }
}
